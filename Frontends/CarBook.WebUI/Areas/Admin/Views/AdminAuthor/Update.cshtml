@model CarBook.Dto.Dtos.AuthorDto.AuthorDto

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}
<head>
    <title>Legg til nytt produkt</title>
    <style>
        .custom-form {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 10px;
            margin-top: 50px;
        }
    </style>
</head>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 custom-form">
            <h3 class="text-center">Rediger Forfatter</h3>
            <form method="post" enctype="multipart/form-data" action="/Admin/AdminAuthor/Update">
                @Html.AntiForgeryToken()
                <input asp-for="AuthorId" class="form-control" type="hidden" >
                 <input asp-for="ImageUrl" class="form-control" type="hidden" >
                <div class="form-group">
                    <label>ForNavn:</label>
                    <input asp-for="FirstName" class="form-control" required>
                </div>
                <div class="form-group">
                    <label>EtterNavn:</label>
                    <input asp-for="LastName" class="form-control" required>
                </div>
                <div class="form-group">
                    <label>E-Post:</label>
                    <input asp-for="Email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label>Beskrivelse :</label>
                    <input asp-for="Description" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label>Bilde Url</label>
                    <input type="file" id="uploadBox" name="file" class="form-control" />
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Lagre</button>
                </div>
            </form>
        </div>
    </div>
</div>