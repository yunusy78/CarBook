@model CarBook.Dto.Dtos.TagCloud.TagCloudDto

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}
<head>
    <title>Legg til nytt produkt</title>
    <style>
        .custom-form {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 10px;
            margin-top: 50px;
        }
    </style>
</head>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 custom-form">
            <h3 class="text-center">Legg til et nytt stikkord</h3>
            <form method="post" enctype="multipart/form-data" action="/Admin/AdminTagCloud/Create">
                @Html.AntiForgeryToken()
                    
                        <div class="form-group">
                            <label asp-for="BlogId">Blogg</label>
                            @Html.DropDownListFor(x => x.BlogId, (List<SelectListItem>)ViewBag.BlogList, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Tittel:</label>
                            <input asp-for="Tag" class="form-control" required>
                        </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Lagre</button>
                </div>
            </form>
        </div>
    </div>
</div>
