@model CarBook.Dto.Dtos.BrandDto.BrandDto

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}
<head>
    <style>
        .custom-form {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 10px;
            margin-top: 50px;
        }
    </style>
</head>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 custom-form">
            <h3 class="text-center">Rediger Merke</h3>
            <form method="post" enctype="multipart/form-data" action="/Admin/AdminBrand/Update">
                @Html.AntiForgeryToken()
            <input type="hidden" asp-for="BrandId" class="form-control" >
                <div class="form-group">
                    <label>Navn :</label>
                    <input asp-for="BrandName" class="form-control" required>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Lagre</button>
                </div>
            </form>
        </div>
    </div>
</div>