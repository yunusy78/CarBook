@model CarBook.Domain.DTOs.CarFeatureDto.CreateCarFeatureDto

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}
<head>
    <title>Legg til nytt produkt</title>
    <style>
        .custom-form {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 10px;
            margin-top: 50px;
        }
    </style>
</head>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 custom-form">
            <h3 class="text-center">Legg til ny Bil Funksjoner</h3>
            <form method="post" enctype="multipart/form-data" action="/Admin/AdminCarFeature/Create">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="CarId">Merke</label>
                            @Html.DropDownListFor(x => x.CarId, (List<SelectListItem>)ViewBag.CarList, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label asp-for="FeatureId">Funksjoner</label>
                            @Html.DropDownListFor(x => x.FeatureId, (List<SelectListItem>)ViewBag.FeatureList, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Tilgjengelig :</label>
                            <select asp-for="IsAvailable" class="form-control">
                                <option value="True">True</option>
                                <option value="False">False</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Lagre</button>
                </div>
            </form>
        </div>
    </div>
</div>
