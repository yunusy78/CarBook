@model CarBook.Dto.Dtos.CarPricingDto.CarPricingDto

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}
<head>
    <title>Legg til nytt produkt</title>
    <style>
        .custom-form {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 10px;
            margin-top: 50px;
        }
    </style>
</head>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 custom-form">
            <h3 class="text-center">Legg til ny BilPrise</h3>
            <form method="post" enctype="multipart/form-data" action="/Admin/AdminCarPricing/Update">
                @Html.AntiForgeryToken()
                <input asp-for="CarPricingId" type="hidden"  class="form-control" >
                <div class="form-group">
                    <label asp-for="CarId">BilId</label>
                    @Html.DropDownListFor(x => x.CarId, (List<SelectListItem>)ViewBag.CarList, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label asp-for="PricingId">PriseId</label>
                    @Html.DropDownListFor(x => x.PricingId, (List<SelectListItem>)ViewBag.PricingList, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Prise :</label>
                    <input asp-for="Price" class="form-control" required>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Lagre</button>
                </div>
            </form>
        </div>
    </div>
</div>