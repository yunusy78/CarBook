@model System.Collections.Generic.List<CarBook.Dto.Dtos.CommentDto.CommentDto>

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
    int count=0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18"></h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Side</a></li>
                            <li class="breadcrumb-item active">Blogg Kommentar</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>  
        @if (Model.Count ==0)
        {
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h3 class="alert-info">Det er ingen kommentarer for denne bloggen ennå.</h3>
                    </div>
                </div>
            </div> 
        }
        @foreach (var item in Model)
        {
            count++;
            <div class="col-md-12">
                <div class="card">
                    <h5 class="card-header">Kommentar - @count</h5>
                    <div class="card-body">
                        <h4 class="card-title">@item.Name</h4>
                        <p class="card-text">@item.Message</p>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">@item.CreatedAt.Date.Day</p>
                        <a href="#" class="btn btn-primary waves-effect waves-light">Publisere</a>
                    </div>
                </div>
            </div>  
        }
    </div>
</div>