@model X.PagedList.IPagedList<CarBook.Dto.Dtos.BlogDto.BlogDto>

@{
    ViewBag.Title = "title";
    Layout = "_UserLayout";
}
@await Html.PartialAsync("/Views/UserLayoutPartialView/_SubHeaderPartialView.cshtml")
<section class="ftco-section">
      <div class="container">
        <div class="row d-flex justify-content-center">
          @foreach(var blog in Model)
          {
          <div class="col-md-12 text-center d-flex ftco-animate">
            <div class="blog-entry justify-content-end mb-md-5">
              <a href="#" class="block-20 img" style="background-image: url(@blog.ImageUrl);">
              </a>
              <div class="text px-md-5 pt-4">
                <div class="meta mb-3">
                  <div><a href="#">@blog.Created.ToShortDateString()</a></div>
                  <div><a href="#">@blog.AuthorName</a></div>
                  <div><a href="#" class="meta-chat"><span class="icon-chat"></span> 3</a></div>
                </div>
                <h3 class="heading mt-2"><a href="#">@blog.Title</a></h3>
                <p>@blog.Description</p>
                <p><a href="/Blog/Details/@blog.BlogId" class="btn btn-primary">Forsett <span class="icon-long-arrow-right"></span></a></p>
              </div>
            </div>
          </div>
          }
        </div>
        <div class="row mt-5">
          <div class="col text-center">
            <div class="block-27">
              <ul>
                 @for (var i = 1; i <= Model.PageCount; i++)
                        {
                	        <li><a class="page-numbers @(i == Model.PageNumber ? "current" : "")" href="@Url.Action("Index", "Blog", new { page = i })" style="background-color: @(i == Model.PageNumber ? "#e83e8c" : "white")">@i</a></li>
                	                                                                                                                                                                                                                      
                                                }
                 
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>
