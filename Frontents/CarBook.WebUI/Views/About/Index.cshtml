@model List<CarBook.Dto.Dtos.AboutDto.AboutDto>

@{
    ViewBag.Title = "title";
    Layout = "_UserLayout";
}

    <section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('bg_3.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
                <div class="col-md-9 ftco-animate pb-5">
                    <p class="breadcrumbs"><span class="mr-2"><a href="/Home/Index">Hjem <i class="ion-ios-arrow-forward"></i></a></span> <span>Om oss <i class="ion-ios-arrow-forward"></i></span></p>
                    <h1 class="mb-3 bread">Om Oss</h1>
                </div>
            </div>
        </div>
    </section>
    
    <section class="ftco-section ftco-about">
        <div class="container">
            <div class="row no-gutters">
                 @foreach (var item in Model)
                 {
                     <div class="col-md-6 p-md-5 img img-2 d-flex justify-content-center align-items-center" style="background-image: url('@item.ImageUrl');">
                     </div>
                     <div class="col-md-6 wrap-about ftco-animate">
                         <div class="heading-section heading-section-white pl-md-5">
                             <span class="subheading">Om oss</span>
                             <h2 class="mb-4">@item.Title</h2>
                             <p>@item.Description</p>
                             <p><a href="#" class="btn btn-primary py-3 px-4">Søk Kjøretøy</a></p>
                         </div>
                     </div>
                 }
            </div>
        </div>
    </section>

@await Component.InvokeAsync("BecomeDriver")


@await Component.InvokeAsync("Testimonial")

@await Component.InvokeAsync("Counter")
